    public void Drive(Joystick j)
    {
    	driveMotors.arcadeDrive(j.getY(), j.getZ());
    }
    
    public void ToggleShifters(){
    	if(leftDriveShifter.get() == Value.kReverse)
    	{
    		leftDriveShifter.set(Value.kForward);
    		rightDriveShifter.set(Value.kForward);
    	}
    	else
    	{
        	leftDriveShifter.set(Value.kReverse);
        	rightDriveShifter.set(Value.kReverse);
    	}
    }
    
    public void InitShifters(){
    	leftDriveShifter.set(Value.kReverse);
    	rightDriveShifter.set(Value.kReverse);
    }
    
    public void DriveAuto(double left, double right)
    {
    	driveMotors.setLeftRightMotorOutputs(left, right);
    }
    
    public boolean IsLeftLimitTriggered()
    {
    	return !leftLinePseudoLimit.get();//normally closed switch
    }
    
    public boolean IsRightLimitTriggered()
    {
    	return !rightLinePseudoLimit.get();//normally closed switch
    }
